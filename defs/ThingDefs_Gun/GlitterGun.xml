  <!--Pistol-->
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>GlitterGun</defName>
    <label>Glitter Pistol</label>
    <description>An extremely complex pistol found on Glitterworlds used by many for self defense.</description>
    <graphicData>
      <texPath>Gun/GlitterGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractRevolver</soundInteract>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>1.4</Mass>
      <AccuracyTouch>0.99</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
      <Weapon_Bulk>0.2</Weapon_Bulk>
    </statBases>
    <weaponTags>
      <li>EliteGun</li>
    </weaponTags>
    <costList>
      <Plasteel>10</Plasteel>
      <Component>5</Component>
    </costList>
<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_GlitterP</defaultProjectile>
        <warmupTime>0.2</warmupTime>
        <range>35</range>
        <soundCast>ShotRevolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
	<!--comps>
	      <li Class="CompProperties_Glower">
        <glowRadius>4</glowRadius>
        <glowColor>(10,128,245,0)</glowColor>
      </li>
	</comps-->
  </ThingDef>
  
  <!--Rifle-->
  
    <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>GlitterRifle</defName>
    <label>Glitter Rifle</label>
    <description>This high-tech rifle fires a two round burst. Standard issue for all Enforcers.</description>
    <graphicData>
      <texPath>Gun/GlitterRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractRifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.82</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
      <Weapon_Bulk>0.75</Weapon_Bulk>
    </statBases>
	<costList>
      <Plasteel>20</Plasteel>
      <Component>10</Component>
    </costList>
	<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_GlitterR</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>39</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>ShotAssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>EliteGun</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
